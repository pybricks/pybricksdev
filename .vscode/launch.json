    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run BLE",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ble",
                "${workspaceFolder}/demo/multidemo.py"
            ]
        },
        {
            "name": "Run USB",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "usb",
                "${file}"
            ]
        },
        {
            "name": "Run SSH",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ssh",
                "192.168.133.238",
                "${relativeFile}"
            ]
        },
        {
            "name": "Flash Technic Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/technichub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash City Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/cityhub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash Move Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/movehub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash SPIKE Prime Hub",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/primehub/build/firmware.zip"
            ]
        },
    ]
}
